                <% BlogsArr.forEach(file => { %>
                    <li>
                        <a href="/blogs/<%= file %>">
                            <%= file.replace(/\.ejs$/, '') %>
                        </a>
                    </li>
                <% }); %>
            </ul>
        </div>
